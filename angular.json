{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "schematicCollections": [
      "angular-eslint"
    ]
  },
  "newProjectRoot": "projects",
  "projects": {
    "apollo-angular-signal": {
      "projectType": "library",
      "root": "projects/apollo-angular-signal",
      "sourceRoot": "projects/apollo-angular-signal/src",
      "prefix": "gql",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/apollo-angular-signal/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/apollo-angular-signal/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/apollo-angular-signal/tsconfig.spec.json",
            "coverage": true
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/apollo-angular-signal/**/*.ts",
              "projects/apollo-angular-signal/**/*.html"
            ],
            "eslintConfig": "projects/apollo-angular-signal/eslint.config.cjs"
          }
        }
      }
    },
    "test": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/test",
      "sourceRoot": "projects/test/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/test/src/main.ts",
            "tsConfig": "projects/test/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/test/public"
              }
            ],
            "styles": [
              "projects/test/src/styles.css"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "test:build:production"
            },
            "development": {
              "buildTarget": "test:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/test/**/*.ts",
              "projects/test/**/*.html"
            ],
            "eslintConfig": "projects/test/eslint.config.cjs"
          }
        }
      }
    }
  }
}
