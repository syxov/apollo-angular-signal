{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "schematicCollections": [
      "angular-eslint"
    ]
  },
  "newProjectRoot": "projects",
  "projects": {
    "apollo-angular-signal": {
      "projectType": "library",
      "root": "projects/apollo-angular-signal",
      "sourceRoot": "projects/apollo-angular-signal/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/apollo-angular-signal/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/apollo-angular-signal/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/apollo-angular-signal/tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/apollo-angular-signal/**/*.ts",
              "projects/apollo-angular-signal/**/*.html"
            ],
            "eslintConfig": "projects/apollo-angular-signal/eslint.config.js"
          }
        }
      }
    }
  }
}
